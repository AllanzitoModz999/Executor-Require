clearButton local = Instância.new("TextButton")
clearButton.Size = UDim2.new(0,5, -15, 0, 30)
clearButton.Position = UDim2.new(0,5, 5, 0, 50)
clearButton.BackgroundColor3 = Cor3.novo(0,5, 0, 0)
clearButton.TextColor3 = Color3.new(1, 1, 1)
clearButton.Font = Enum.Font.SourceSansBold
clearButton.TextSize = 14
clearButton.Text = "Limpar"
clearButton.Parent = executeSection


função local executeScript()
    scriptName local = TextBox.Text
    sucesso local, script = pcall(require, scriptName)
fim


função local clearScript()
    scriptTextBox.Texto = ""
fim


executeButton.MouseButton1Click:Conectar(executeScript)
clearButton.MouseButton1Click:Conectar(clearScript)
